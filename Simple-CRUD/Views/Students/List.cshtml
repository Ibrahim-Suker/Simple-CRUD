@model List<Simple_CRUD.Models.Student>

@{
    ViewData["Title"] = "Student List";
}

<h2 class="text-primary text-center">📋 Student List</h2>

<a asp-action="Add" class="btn btn-success mb-3">➕ Add New Student</a>

<table class="table table-striped table-bordered shadow">
    <thead class="table-dark text-white">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Subscribed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Name</td>
                    <td>@student.Email</td>
                    <td>@(student.Subscribed ? "✅ Yes" : "❌ No")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-warning btn-sm">✏️ Edit</a>
                        <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this student?');">🗑 Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No students available.</td>
            </tr>
        }
    </tbody>
</table>
