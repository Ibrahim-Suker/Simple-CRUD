@model Simple_CRUD.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<h2 class="text-danger">🗑 Delete Student</h2>

<p>Are you sure you want to delete this student?</p>

<ul>
    <li><strong>Name:</strong> @Model.Name</li>
    <li><strong>Email:</strong> @Model.Email</li>
    <li><strong>Subscribed:</strong> @(Model.Subscribed ? "✅ Yes" : "❌ No")</li>
</ul>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
